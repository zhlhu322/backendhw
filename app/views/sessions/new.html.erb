<h1><%= t("users.sign_in")%></h1>

<div class="w-full flex flex-col items-center justify-center my-2 ">
  <%= form_with url: sign_in_path, local:true,
      html: { class: "w-2/5 flex flex-col" }  do |f|%>

    <div class="w-full flex flex-col bg-missionbg px-8 py-4 rounded-3xl mb-6 gap-y-4">
      <div class="field">
        <%= f.label :email, t("users.email") ,class:"form_title" %>
        <%= f.text_field :email ,placeholder: "abc@example.com", class: "rounded-md outline-2 outline-accent/75 p-1 text-accent"%>
      </div>

      <div class="field">
        <%= f.label :password, t("users.password") ,class:"form_title" %>
        <%= f.password_field :password ,placeholder: "password", class: "rounded-md outline-2 outline-accent/75 p-1 text-accent"%>
      </div>

      <%= f.submit t("users.sign_in"), class: "flex self-center text-xl button w-fit" %>
    </div>
  <%end%>

  <div class = "text-base flex flex-row items-center justify-center">
    <p class="flex">還沒有帳號？</p>
    <%= link_to t("users.sign_up"), sign_up_path, method: :get, class: "flex underline"%>
  </div>

</div>
